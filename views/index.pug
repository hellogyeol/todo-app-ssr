doctype html
html(lang="ko")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title To-Do App
  body
    h1 To-Do App (SSR)
    form(action="/" method="post")
      input(type="text" name="content")
    ul
      each todo in todoList
        li(id=todo.id)
          span= todo.content